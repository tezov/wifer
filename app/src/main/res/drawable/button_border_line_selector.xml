<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="8dp" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <stroke android:width="2dp" android:color="@color/DarkGray" />
            <solid android:color="#FFD3D3D3" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="8dp" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <stroke android:width="2dp" android:color="?attr/colorAccent" />
            <gradient android:angle="0" android:endColor="?attr/colorFaint" android:startColor="?attr/colorAccentLight" android:type="linear" />
        </shape>
    </item>
</selector>